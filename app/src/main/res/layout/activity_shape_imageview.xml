<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:alignContent="flex_start"
    app:alignItems="flex_start"
    app:flexWrap="wrap"
    app:justifyContent="space_around"
    tools:context="com.vinaysshenoy.devfest17sample.BackgroundsAndBordersActivity"
    >

    <com.vinaysshenoy.devfest17sample.widget.shapeimageview.ShapeImageView
        android:id="@+id/iv_shapeImageViewCircle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"
        />

    <com.vinaysshenoy.devfest17sample.widget.shapeimageview.ShapeImageView
        android:id="@+id/iv_shapeImageViewSquare"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"
        />

    <com.vinaysshenoy.devfest17sample.widget.shapeimageview.ShapeImageView
        android:id="@+id/iv_shapeImageViewRoundedSquare"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"
        />

    <com.vinaysshenoy.devfest17sample.widget.shapeimageview.ShapeImageView
        android:id="@+id/iv_shapeImageViewTriangle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"
        />


</com.google.android.flexbox.FlexboxLayout>
